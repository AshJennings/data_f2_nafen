#!/usr/bin/gnuplot


# numbers are from ../make_sig_model script
f = 1.012
fs(x) = 0.2 + 1.1*cos(2*pi*f*x) + 0.01*cos(2*2*pi*f*x) + 0.02*cos(3*2*pi*f*x)
fd(x) = 0.2 + 1.1*cos(2*pi*f*x) + 0.3*cos(2*2*pi*f*x) + 0.12*cos(3*2*pi*f*x)

set key center top


plot [0:1]\
  "1577836800.txt" using 1:2 w p pt 7 title "averaged drive",\
  "1577836800.txt" using 1:3 w p pt 7 title "averaged signal",\
  fs(x) w l lc 0 title "theory",\
  fd(x) w l lc 0 notitle,\
  "signal.dat" u 1:2 w l title "raw drive" lc 3,\
  "signal.dat" u 1:10 w l title "raw signal" lc 4

pause -1